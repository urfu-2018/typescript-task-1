{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",

    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  }
}
